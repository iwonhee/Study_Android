<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_marginBottom="10dp"
    >

    <!-- 작성자 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_view_writer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginRight="10dp"
            />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/tv_view_writer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="오늘의집"
                android:textColor="@color/black"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/tv_view_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12시간 전"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_more"
            android:padding="14dp"
            />



    </LinearLayout>

    <!-- 제목 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="글 제목 글 제목"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_view_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="부제목같은데 뭘까 이게"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        />

    <!-- 이미지 -->
    <ImageView
        android:id="@+id/iv_view_main"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:src="@drawable/lion"
        android:scaleType="fitXY"
        />

    <!-- 글 내용 -->
    <TextView
        android:id="@+id/tv_view_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사자 사자 집을 사자"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <!-- 작성자 -->
    <TextView
        android:id="@+id/tv_view_writer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오늘의집"
        />

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        android:layout_marginTop="10dp"
        />

    <!-- 버튼상자 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 버튼1 -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_share"
                android:padding="14dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공유하기"
                android:textColor="#333"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>

        <!-- 버튼1 -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_likes"
                android:padding="14dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좋아요"
                android:textColor="#333"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>