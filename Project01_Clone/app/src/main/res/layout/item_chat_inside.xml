<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#B1C7D9"
    android:padding="15dp"
    >

    <ImageView
        android:id="@+id/iv_chat_ans"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile_img7"
        android:layout_marginRight="15dp"
        />
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_chat_name_inside"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user1"
            android:textSize="18dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_chat_msg_ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="마지막 메세지"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_below="@+id/tv_chat_name_inside"
            />
        <TextView
            android:id="@+id/tv_chat_time_inside"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오후 12:25"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_alignBottom="@+id/tv_chat_msg_ans"
            android:layout_toRightOf="@+id/tv_chat_msg_ans"
            />

    </RelativeLayout>

</LinearLayout>