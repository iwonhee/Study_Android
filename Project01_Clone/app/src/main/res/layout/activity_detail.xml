<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".friendlist.DetailActivity"
    android:orientation="vertical"
    android:background="#ccc"
    >

    <!--
        vector asset : 안드로이드에 들어가는 이미지
        레이아웃 이용 친구 클릭시 나ㅗ는 디테일 화면 구성
    -->

    <!-- 배경 이미지 -->
    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background7"
        android:scaleType="fitXY"
        />

    <!-- 닫기 층 -->
    <LinearLayout
        android:id="@+id/lin_close"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/iv_close_detail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_close"
            android:layout_gravity="center"

            />

    </LinearLayout>

    <!-- 프사 -->
    <ImageView
        android:id="@+id/iv_profile_detail"
        android:layout_below="@+id/lin_close"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="380dp"
        android:src="@drawable/profile_img3"
        android:layout_centerHorizontal="true"
        />

    <!-- 이름, 상메 -->
    <LinearLayout
        android:layout_below="@+id/iv_profile_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textAlignment="center"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/tv_profile_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="메세지"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/white"

            />

    </LinearLayout>

    <!-- 바텀 내비 -->
    <LinearLayout
        android:id="@+id/lin_btm_nav"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        >
        <!-- 버튼1 -->
        <LinearLayout
            android:id="@+id/lin_menu1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_chat"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1:1채팅"
                android:textColor="@color/white"
                android:textAlignment="center"
                />
        </LinearLayout>

        <!-- 버튼2 -->
        <LinearLayout
            android:id="@+id/lin_menu2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_call"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="통화하기"
                android:textColor="@color/white"
                android:textAlignment="center"
                />
        </LinearLayout>

        <!-- 버튼3 -->
        <LinearLayout
            android:id="@+id/lin_menu3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_facetalk"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="페이스톡"
                android:textColor="@color/white"
                android:textAlignment="center"
                />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
















