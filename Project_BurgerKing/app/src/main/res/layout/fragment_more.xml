<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreFragment"
    android:background="@color/bg_light"
    android:orientation="vertical"
    >

    <!-- 상단 메뉴 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더보기"
            android:textColor="@color/font_braun"
            android:textSize="24dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/bmj_ua"
            android:textFontWeight="900"
            />
    </RelativeLayout>

    <!-- SCROLL -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="진행중인 이벤트"
                android:fontFamily="@font/bmj_ua"
                android:textFontWeight="700"
                android:textColor="@color/font_braun"
                android:textSize="22dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                />

            <!-- 이벤트 좌우 스크롤 -->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/nsv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recv_more_event"
                    />
            </androidx.core.widget.NestedScrollView>

            <!-- 이벤트 -->
            <LinearLayout
                android:id="@+id/lin_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/border"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이벤트"
                        android:fontFamily="@font/bmj_ua"
                        android:textColor="@color/font_braun"
                        android:textSize="24dp"
                        android:textFontWeight="600"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="10dp"
                        />
                    <ImageView
                        android:id="@+id/iv_down1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_down_40"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <!-- sub menu -->
                <LinearLayout
                    android:id="@+id/lin_sub1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="이벤트"
                        android:textColor="@color/font_braun"
                        android:fontFamily="@font/bmj_ua"
                        android:textSize="17dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="신규매장"
                        android:textColor="@color/font_braun"
                        android:fontFamily="@font/bmj_ua"
                        android:textSize="17dp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_marginBottom="20dp"
                        />
                </LinearLayout>

            </LinearLayout>

            <!-- 매장소개 -->
            <LinearLayout
                android:id="@+id/lin_store_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/border"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매장소개"
                        android:fontFamily="@font/bmj_ua"
                        android:textColor="@color/font_braun"
                        android:textSize="24dp"
                        android:textFontWeight="600"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="10dp"
                        />
                    <ImageView
                        android:id="@+id/iv_down2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_down_40"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <!-- sub menu -->
                <LinearLayout
                    android:id="@+id/lin_sub2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="가까운 매장"
                        android:textColor="@color/font_braun"
                        android:fontFamily="@font/bmj_ua"
                        android:textSize="17dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="지역검색"
                        android:textColor="@color/font_braun"
                        android:fontFamily="@font/bmj_ua"
                        android:textSize="17dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="매장명검색"
                        android:textColor="@color/font_braun"
                        android:fontFamily="@font/bmj_ua"
                        android:textSize="17dp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_marginBottom="20dp"
                        />
                </LinearLayout>

            </LinearLayout>

            <!-- 매뉴소개 -->
            <LinearLayout
                android:id="@+id/lin_menu_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/border"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="메뉴소개"
                        android:fontFamily="@font/bmj_ua"
                        android:textColor="@color/font_braun"
                        android:textSize="24dp"
                        android:textFontWeight="600"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="10dp"
                        />
                    <ImageView
                        android:id="@+id/iv_down3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_down_40"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <!-- sub menu -->
                <LinearLayout
                    android:id="@+id/lin_sub3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <TextView
                        android:id="@+id/tv_detail_special"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="스페셜"
                        android:textColor="@color/font_braun"
                        android:fontFamily="@font/bmj_ua"
                        android:textSize="17dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="신제품(NEW)"
                        android:textColor="@color/font_braun"
                        android:fontFamily="@font/bmj_ua"
                        android:textSize="17dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="프리미엄"
                        android:textColor="@color/font_braun"
                        android:fontFamily="@font/bmj_ua"
                        android:textSize="17dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                    <TextView
                        android:id="@+id/tv_detail_whopper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="와퍼"
                        android:textColor="@color/font_braun"
                        android:fontFamily="@font/bmj_ua"
                        android:textSize="17dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                    <TextView
                        android:id="@+id/tv_detail_chicken"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="치킨"
                        android:textColor="@color/font_braun"
                        android:fontFamily="@font/bmj_ua"
                        android:textSize="17dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="올데이킹"
                        android:textColor="@color/font_braun"
                        android:fontFamily="@font/bmj_ua"
                        android:textSize="17dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="사이드"
                        android:textColor="@color/font_braun"
                        android:fontFamily="@font/bmj_ua"
                        android:textSize="17dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                    <TextView
                        android:id="@+id/tv_detail_drink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="음료"
                        android:textColor="@color/font_braun"
                        android:fontFamily="@font/bmj_ua"
                        android:textSize="17dp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_marginBottom="20dp"
                        />
                </LinearLayout>

            </LinearLayout>

            <!-- 약관 및 정책 -->
            <LinearLayout
                android:id="@+id/lin_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/border"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="약관 및 정책"
                        android:fontFamily="@font/bmj_ua"
                        android:textColor="@color/font_braun"
                        android:textSize="24dp"
                        android:textFontWeight="600"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="10dp"
                        />
                    <ImageView
                        android:id="@+id/iv_down4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_down_40"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <!-- sub menu -->
                <LinearLayout
                    android:id="@+id/lin_sub4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="이용약관"
                        android:textColor="@color/font_braun"
                        android:fontFamily="@font/bmj_ua"
                        android:textSize="17dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="개인정보처리방침"
                        android:textColor="@color/font_braun"
                        android:fontFamily="@font/bmj_ua"
                        android:textSize="17dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="법적고지"
                        android:textColor="@color/font_braun"
                        android:fontFamily="@font/bmj_ua"
                        android:textSize="17dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="사업자 정보 확인"
                        android:textColor="@color/font_braun"
                        android:fontFamily="@font/bmj_ua"
                        android:textSize="17dp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_marginBottom="20dp"
                        />
                </LinearLayout>

            </LinearLayout>

            <!-- 고객센터 -->
            <LinearLayout
                android:id="@+id/lin_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/border"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="고객센터"
                        android:fontFamily="@font/bmj_ua"
                        android:textColor="@color/font_braun"
                        android:textSize="24dp"
                        android:textFontWeight="600"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="10dp"
                        />
                    <ImageView
                        android:id="@+id/iv_down5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_down_40"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <!-- sub menu -->
                <LinearLayout
                    android:id="@+id/lin_sub5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FAQ"
                        android:textColor="@color/font_braun"
                        android:fontFamily="@font/bmj_ua"
                        android:textSize="17dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="앱 이용안내"
                        android:textColor="@color/font_braun"
                        android:fontFamily="@font/bmj_ua"
                        android:textSize="17dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="문의"
                        android:textColor="@color/font_braun"
                        android:fontFamily="@font/bmj_ua"
                        android:textSize="17dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="공지사항"
                        android:textColor="@color/font_braun"
                        android:fontFamily="@font/bmj_ua"
                        android:textSize="17dp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_marginBottom="20dp"
                        />
                </LinearLayout>

            </LinearLayout>

            <!-- 환경설정 -->
            <LinearLayout
                android:id="@+id/lin_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/border"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="앱 환경설정"
                        android:fontFamily="@font/bmj_ua"
                        android:textColor="@color/font_braun"
                        android:textSize="24dp"
                        android:textFontWeight="600"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="10dp"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/border"
                    />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>