<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="@color/bg_light">
    <!-- 상단메뉴 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="10dp"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:fontFamily="@font/one_mobile"
            android:textColor="@color/font_braun"
            android:textSize="22dp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <!-- CONTENT -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!-- 로그인 입력창 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일반 로그인"
                        android:fontFamily="@font/one_mobile"
                        android:textColor="@color/font_braun"
                        android:textSize="20dp"
                        />
                    <!-- 아이디 입력 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#ccc"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        >
                        <EditText
                            android:id="@+id/edt_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/edittext_login"
                            android:hint="아이디(이메일)"
                            android:paddingLeft="10dp"
                            android:fontFamily="@font/bmj_ua"
                            android:textColor="@color/font_braun"
                            />
                        <ImageView
                            android:id="@+id/iv_clear_id"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="end|center"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_close_vector"
                            android:visibility="gone"
                            />
                    </com.google.android.material.card.MaterialCardView>
                    <!-- 비밀번호 입력 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#ccc"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        android:layout_marginBottom="10dp"
                        >
                        <EditText
                            android:id="@+id/edt_pw"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/edittext_login"
                            android:hint="비밀번호"
                            android:paddingLeft="10dp"
                            android:fontFamily="@font/bmj_ua"
                            android:textColor="@color/font_braun"
                            />
                        <ImageView
                            android:id="@+id/iv_clear_pw"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="end|center"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_close_vector"
                            android:visibility="gone"
                            />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- 체크박스 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        >
                        <!-- 체크박스 : 아이디 저장 -->
                        <LinearLayout
                            android:id="@+id/lin_check_box1"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <CheckBox
                                android:id="@+id/cb_saveId"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:button="@null"
                                android:background="@drawable/check_box_login"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="아이디 저장"
                                android:textSize="16dp"
                                android:textColor="@color/font_braun"
                                />
                        </LinearLayout>
                        <!-- 체크박스 : 자동로그인 -->
                        <LinearLayout
                            android:id="@+id/lin_check_box2"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <CheckBox
                                android:id="@+id/cb_autoLogin"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:button="@null"
                                android:background="@drawable/check_box_login"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="자동 로그인"
                                android:textSize="16dp"
                                android:textColor="@color/font_braun"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 로그인 버튼 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_login"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/icon_red"
                        android:layout_marginBottom="15dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="로그인"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/bmj_ua"
                            />

                    </com.google.android.material.card.MaterialCardView>
                    <!-- 회원가입 버튼 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_join"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/font_braun"
                        android:layout_marginBottom="10dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="회원가입"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/bmj_ua"
                            />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- 아이디/비밀번호 찾기 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="2dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아이디 찾기"
                            android:fontFamily="@font/one_mobile"
                            android:textColor="@color/font_braun"
                            />
                        <View
                            android:layout_width="2dp"
                            android:layout_height="12dp"
                            android:background="@color/bg_light"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="비밀번호 찾기"
                            android:fontFamily="@font/one_mobile"
                            android:textColor="@color/font_braun"
                            />

                    </LinearLayout>

                </LinearLayout> <!-- 로그인창 끝 -->


            </com.google.android.material.card.MaterialCardView>

            <!-- 비회원 로그인 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                app:cardElevation="0dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="25dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="비회원 주문"
                        android:fontFamily="@font/one_mobile"
                        android:textColor="@color/font_braun"
                        android:textSize="20dp"
                        android:layout_marginBottom="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="회원가입 없이 비회원으로 주문이 가능합니다."
                        android:textColor="@color/font_braun"
                        android:layout_marginBottom="10dp"
                        />
                    <!-- 비회원 주문 버튼 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_nonLogin"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/font_braun"
                        android:layout_marginBottom="13dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="비회원 주문"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/bmj_ua"
                            />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>